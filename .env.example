# BioMarket Environment Variables
# ⚠️ PRODUCTION DEFAULTS - Безопасные значения по умолчанию

# ============================================
# API CONFIGURATION
# ============================================

# API URL (production) - Railway backend
VITE_API_URL=https://biomark-web-production.up.railway.app

# API Mode: 'mock' | 'real' - PRODUCTION: real
VITE_API_MODE=real

# ============================================
# DEMO CREDENTIALS (DEVELOPMENT ONLY!)
# ============================================

# ⚠️ WARNING: These are ONLY for local development
# ⚠️ PRODUCTION: Set to empty or remove entirely

# Demo admin credentials (development only)
VITE_DEMO_ADMIN_EMAIL=
VITE_DEMO_ADMIN_PASSWORD=

# Demo farmer credentials (development only)
VITE_DEMO_FARMER_EMAIL=
VITE_DEMO_FARMER_PASSWORD=

# ============================================
# FEATURE FLAGS
# ============================================

# Enable demo login - PRODUCTION: false
VITE_ENABLE_DEMO_LOGIN=false

# ============================================
# OTHER CONFIGURATION
# ============================================

# App name
VITE_APP_NAME=BioMarket

# App URL
VITE_APP_URL=https://biomark-web.vercel.app

# Support email
VITE_SUPPORT_EMAIL=support@biomarket.cz
